{
    "name": "kubernetes_collection_and_access_status",
    "label": "kubernetes Collection status",
    "description": "kubernetes collection and access verification status",
    "dashboard_folder": "kubernetesInventory",
    "version": "1.0.3",
    "enabled": false,
    "live_edit": true,
    "dashboard_type": "template",
    "dashboard_style": "auto",
    "template_variables": {
        "CUST_ID": {
            "contextId": "customerId"
        },
        "PROJ_ID": {
            "contextId": "projectId"
        },
        "CUST_TAG": {
            "contextId": "customerTag"
        }
    },
    "dashboard_sections": [
        {
            "title": "Access Verifcation Status",
            "show_filter": true,
            "widgets": [
                {
                    "title": "Access Verifcation Status",
                    "widget_type": "tabular",
                    "stream": "kubernetes_access_verification_status",
                    "extra_filter": "customer_tag is '{{CUST_TAG}}' or customer_tag is empty",
                    "height": 4,
                    "max_width": 12,
                    "min_width": 12,
                    "columns": {
                        "asset_ip": {
                            "title": "Asset IP",
                            "type": "TEXT",
                            "visible": true
                        },
                        "collection_timestamp": {
                            "title": "Verification Time",
                            "type": "DATETIME",
                            "visible": true
                        },
                        "collection_status": {
                            "title": "Status",
                            "htmlTemplateForRow": "{%raw%}<span class='badge' style='background-color: {{ row.status_color }}' > {{ row.collection_status }} </span>{%endraw%}"
                        },
                        "bot_source_name": {
                            "title": "Credential Used"
                        },
                        "bot_name": {
                            "title": "Bot Name",
                            "visible": false
                        },
                        "reason": {
                            "title": "Failure Reason"
                        }
                    },
                    "custom_columns": [
                        {
                            "id": "status_color",
                            "label": "Discovery Scope Color",
                            "key": false,
                            "visible": false,
                            "expr": "'#008000' if collection_status == 'Success' else '#FF0000'"
                        }
                    ],
                    "widget_id": "b2c8d81c"
                }
            ]
        },
        {
            "title": "Collection Status",
            "show_filter": true,
            "widgets": [
                {
                    "title": "Collection Status",
                    "widget_type": "tabular",
                    "stream": "asset_inventory_collection_status_stream",
                    "extra_filter": "bot_source_type in ['kubernetes-inventory','linux-inventory'] and (customer_tag is '{{CUST_TAG}}' or customer_tag is empty)",
                    "height": 4,
                    "max_width": 12,
                    "min_width": 12,
                    "columns": {
                        "collection_timestamp": {
                            "title": "Collection time",
                            "type": "DATETIME",
                            "visible": true
                        },
                        "collection_status": {
                            "title": "Status",
                            "htmlTemplateForRow": "{%raw%}<span class='badge' style='background-color: {{ row.status_color }}' > {{ row.collection_status }} </span>{%endraw%}"
                        },
                        "bot_source_name": {
                            "title": "Bot Source Name"
                        },
                        "bot_source_type": {
                            "title": "Bot Source Type"
                        },
                        "bot_name": {
                            "title": "Bot Name"
                        },
                        "reason": {
                            "title": "Failure Reason"
                        }
                    },
                    "custom_columns": [
                        {
                            "id": "status_color",
                            "label": "Discovery Scope Color",
                            "key": false,
                            "visible": false,
                            "expr": "'#008000' if collection_status == 'Success' else '#FF0000'"
                        }
                    ],
                    "widget_id": "b585247a"
                }
            ]
        }
    ],
    "saved_time": "2025-08-07T07:57:28.979682"
}