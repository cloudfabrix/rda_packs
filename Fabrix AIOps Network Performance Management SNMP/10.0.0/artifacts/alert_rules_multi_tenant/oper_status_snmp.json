{
    "type": "log",
    "enabled": true,
    "name": "oper_status_snmp",
    "schedule": {
        "minutes": 15
    },
    "data": {
        "stream": "rdaf_telegraf_metrics",
        "groupby": [
            "i_agent_host",
            "m_oper_status_label",
            "i_description"
        ],
        "query": "(name == 'interface') and i_input == 'SNMP' and i_projectid is '$PKG_CONTEXT_CUSTOMER_ID'"
    },
    "actions": [
        {
            "state": "OPEN",
            "extra_query": "m_oper_status_label is 'Down'",
            "attributes": {
                "severity": "CRITICAL",
                "metric_name": "oper_status",
                "metric_value_field": "m_oper_status_label"
            },
            "notification": [
                {
                    "channel": "${PKG_CONTEXT_CUSTOMER_TAG}_telegraf_snmp_metrics"
                }
            ]
        },
        {
            "state": "CLEAR",
            "extra_query": "m_oper_status_label is 'UP'",
            "attributes": {
                "severity": "INFO",
                "metric_name": "oper_status",
                "metric_value_field": "m_oper_status_label"
            },
            "notification": [
                {
                    "channel": "${PKG_CONTEXT_CUSTOMER_TAG}_telegraf_snmp_metrics"
                }
            ]
        }
    ],
    "saved_time": "2025-08-19T11:29:40.799895"
}