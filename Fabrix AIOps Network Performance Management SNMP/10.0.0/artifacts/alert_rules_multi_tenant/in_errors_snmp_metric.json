{
    "type": "metric",
    "name": "in_errors_snmp_metric",
    "enabled": true,
    "schedule": {
        "minutes": 15
    },
    "data": {
        "stream": "rdaf_telegraf_metrics",
        "groupby": [
            "i_agent_host",
            "name",
            "i_description"
        ],
        "query": "(name == 'interface') and i_input == 'SNMP' and i_projectid is '$PKG_CONTEXT_CUSTOMER_ID'"
    },
    "actions": [
        {
            "state": "OPEN",
            "threshold": "700000",
            "agg_column": "m_in_errors",
            "agg_func": "avg",
            "repeat_count": 1,
            "attributes": {
                "severity": "CRITICAL",
                "metric_name": "in_errors",
                "metric_value_field": "m_in_errors_avg"
            },
            "notification": [
                {
                    "channel": "${PKG_CONTEXT_CUSTOMER_TAG}_telegraf_snmp_metrics"
                }
            ]
        },
        {
            "state": "CLEAR",
            "agg_column": "m_in_errors",
            "agg_func": "avg",
            "threshold": "600000",
            "attributes": {
                "severity": "INFO",
                "metric_name": "in_errors",
                "metric_value_field": "m_in_errors_avg"
            },
            "notification": [
                {
                    "channel": "${PKG_CONTEXT_CUSTOMER_TAG}_telegraf_snmp_metrics"
                }
            ]
        }
    ],
    "saved_time": "2025-08-19T06:32:27.314966"
}